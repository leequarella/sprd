!!!
%html{"ng-app" => 'derby'}
  %head
    %title Sprd
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    = csrf_meta_tags
  %body
    %header#header
      %nav{:class=>"navbar navbar-default", :role=>"navigation"}
        .container-fluid
          .navbar-header
            %a{:class=>"navbar-brand", :href=>"#"} SPRD
          %ul.nav.navbar-nav
            %li=link_to 'Attendence', attendence_percentage_report_path
            -if current_user
              %li=link_to 'Management', management_dashboard_path
              %li=link_to 'Log out', logoff_path
            -else
              %li=link_to 'Login', login_path
          -if current_user
            .navbar-text.navbar-right
              =current_user.email

    .content
      = yield

    :javascript
      $("#header").headroom()
