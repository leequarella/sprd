!!!
%html{"ng-app" => 'derby'}
  %head
    %title Sprd
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %h1 SPRD
    =link_to 'Attendence Report', attendence_percentage_report_path
    \|
    -if current_user
      =link_to 'Management', management_dashboard_path
      \|
      =link_to 'Log out', logoff_path
      \|
      =current_user.email
    -else
      =link_to 'Login', login_path

    %hr
    = yield
